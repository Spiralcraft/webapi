  xmlns:httpd="class:/spiralcraft/pioneer/httpd/"
  xmlns:autofilter="class:/spiralcraft/servlet/autofilter/"
  >
  
  <debug>true
  </debug>
  
  <documentRoot>${spiralcraft.builder.dir}/../war
  </documentRoot>
  
  <initParameters>
    <httpd:InitParameter>
      <name>spiralcraft.instance.rootURI
      </name>
      <value>${spiralcraft.builder.dir}/..
      </value>
    </httpd:InitParameter>
  
  </initParameters>
        
</base:Context>
